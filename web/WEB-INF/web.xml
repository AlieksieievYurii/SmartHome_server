<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Actions</servlet-name>
        <servlet-class>servlets.Actions</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionsFromDevices</servlet-name>
        <servlet-class>servlets.ActionsFromDevices</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionsHash</servlet-name>
        <servlet-class>servlets.ActionsHash</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Actions</servlet-name>
        <url-pattern>/actions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionsFromDevices</servlet-name>
        <url-pattern>/actions-by-device</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionsHash</servlet-name>
        <url-pattern>/actions-hash</url-pattern>
    </servlet-mapping>
</web-app>